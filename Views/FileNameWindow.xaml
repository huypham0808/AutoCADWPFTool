<Window x:Class="ChangeFileName.Views.FileNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ChangeFileName.Views"
        xmlns:local1="clr-namespace:ChangeFileName.ViewModels"
        mc:Ignorable="d"
        FontSize="16"
        Height="543"
        Width="650"
        Title="Utilities tool - CSS VN Team @2025"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        d:DesignHeight="543"
        d:DesignWidth="650"
        VerticalAlignment="Stretch"
        SizeToContent="Height"
        Closing="Window_Closing">
    <Window.Resources>
        <local1:UpperCaseConverter x:Key="UpperCaseConverter" />
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="DodgerBlue" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Padding"
                    Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="SkyBlue" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="DarkBlue" />
                                <Setter Property="Foreground"
                                        Value="White" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Border}"
               x:Key="ShadowBorderStyle">
            <Setter Property="BorderBrush"
                    Value="LightGray" />
            <Setter Property="BorderThickness"
                    Value="0.9" />
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="7"
                                      ShadowDepth="4" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <TabControl BorderThickness="0"
                BorderBrush="Transparent"
                Background="WhiteSmoke">
        <TabItem Header="Utility"
                 Width="100">
            <StackPanel Orientation="Vertical">
                <Border Padding="10">
                    <Grid>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Style="{StaticResource ShadowBorderStyle}">
                                </Border>
                                <Border Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Padding="8"
                                        Background="White"
                                        CornerRadius="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0"
                                               Grid.Column="0"
                                               Content="Input file name"
                                               FontWeight="Bold" />
                                        <TextBox Grid.Column="0"
                                                 Grid.Row="1"
                                                 Height="40"
                                                 Width="410"
                                                 Text="{Binding NewFileName, Mode=TwoWay}" />
                                        <Label Content="Revision"
                                               Grid.Row="0"
                                               Grid.Column="1"
                                               HorizontalContentAlignment="Center" />
                                        <TextBox Grid.Column="1"
                                                 Grid.Row="1"
                                                 x:Name="txtRevisionNum"
                                                 Text="{Binding RevisionNumber}"
                                                 VerticalContentAlignment="Center"
                                                 HorizontalContentAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Width="50"
                                                 Margin="15 0 15 0"
                                                 TextChanged="txtRevisionNum_TextChanged" />
                                        <Button Grid.Column="2"
                                                Grid.Row="1"
                                                Width="100"
                                                Height="40"
                                                Content="Update"
                                                HorizontalAlignment="Center"
                                                Command="{Binding ChangeFileNameCommand}" />
                                    </Grid>
                                </Border>
                                <Border Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="0 10 0 0"
                                        Style="{StaticResource ShadowBorderStyle}">
                                </Border>
                                <Border Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Padding="10"
                                        Background="White"
                                        CornerRadius="10"
                                        Margin="0 10 0 0">
                                    <StackPanel>
                                        <Label Grid.Column="0"
                                               Grid.Row="0"
                                               Content="Input text to convert:"
                                               FontWeight="Bold" />
                                        <TextBox Grid.Column="0"
                                                 Grid.Row="1"
                                                 Height="30"
                                                 Grid.ColumnSpan="3"
                                                 Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <Label Grid.Column="0"
                                               Grid.Row="0"
                                               Content="Result:"
                                               FontWeight="Bold" />
                                        <TextBox Grid.Column="0"
                                                 Grid.Row="5"
                                                 Height="30"
                                                 Grid.ColumnSpan="3"
                                                 Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource UpperCaseConverter}}"
                                                 IsReadOnly="True"
                                                 Foreground="Green"
                                                 Margin="0 0 0 10" />


                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="0 15 0 0"
                                        Style="{StaticResource ShadowBorderStyle}">
                                </Border>
                                <Border Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Padding="5"
                                        Background="White"
                                        CornerRadius="10"
                                        Margin="0 12 0 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0"
                                               Grid.Column="0"
                                               Grid.ColumnSpan="3"
                                               Content="Upload file from:"
                                               FontWeight="Bold" />
                                        <Label Grid.Row="1"
                                               Grid.Column="0"
                                               Grid.ColumnSpan="3"
                                               Height="30"
                                               Content="{Binding CurrentLocalFilePath}"
                                               Foreground="Blue"
                                               BorderBrush="SlateGray"
                                               BorderThickness="1" />
                                        <Button Grid.Row="3"
                                                Grid.Column="0"
                                                Width="100"
                                                Height="40"
                                                HorizontalAlignment="Right"
                                                Content="Get current"
                                                Background="LightGray"
                                                Foreground="Black"
                                                Command="{Binding GetCurrentLocalFileDwgCommand}" />
                                        <Label Grid.Row="2"
                                               Grid.Column="0"
                                               Grid.ColumnSpan="3"
                                               Height="30"
                                               Margin="0 10 0 15"
                                               Content="{Binding SDriveCompanyPath}"
                                               Foreground="Blue"
                                               BorderBrush="SlateGray"
                                               BorderThickness="1" />
                                        <Button Grid.Row="3"
                                                Grid.Column="1"
                                                Width="100"
                                                Margin="0 0 5 0"
                                                Content="Browse to S"
                                                Background="LightGray"
                                                Foreground="Black"
                                                HorizontalAlignment="Right"
                                                Command="{Binding GetSDriveProjectFolderCommand}" />
                                        <Button Grid.Row="3"
                                                Grid.Column="2"
                                                Width="100"
                                                Height="40"
                                                Content="Push"
                                                Command="{Binding PushFileToSDriveCommand}" />
                                        <Expander Grid.Row="4"
                                                  Margin="0 10 0 0"
                                                  Grid.Column="0"
                                                  Grid.ColumnSpan="3"
                                                  Header="Current folder"
                                                  IsExpanded="{Binding IsExpandedHistoryPath}">
                                            <ListView ItemsSource="{Binding FilePathToListView}"
                                                      SelectedItem="{Binding SelectHistoryPath, Mode=TwoWay}"
                                                      SelectionChanged="ListViewHistoryPath_SelectionChanged"
                                                      Foreground="DarkBlue">
                                            </ListView>
                                        </Expander>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </TabItem>
        <TabItem Header="New Format Style">
            <Border Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Style="{StaticResource ShadowBorderStyle}" />
                    <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Content="Scale number: "
                                   VerticalAlignment="Center"
                                   Margin="0 20 0 0" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding TextStyleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0 20 0 0"
                                     TextChanged="TextBox_TextChanged"
                                     x:Name="txtStyleName" />
                            <Button Grid.Row="0"
                                    Grid.Column="2"
                                    Content="Create"
                                    Width="100"
                                    Height="35"
                                    Command="{Binding CreatAllCommands}"
                                    Margin="-90 20 0 0" />
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Orientation="Horizontal"
                                        Margin="0 20 0 0"
                                        HorizontalAlignment="Center">
                            </StackPanel>
                            <Button Grid.Row="1"
                                    Grid.Column="1"
                                    Content="Create Callout"
                                    Width="150"
                                    HorizontalAlignment="Center"
                                    Margin="10 10 0 10"
                                    Command="{Binding CreateMultileaderCommand}"
                                    Visibility="Collapsed" />

                        </Grid>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <Label Content="{Binding StatusCreateTextStyle}"
                               Foreground="{Binding ColorTextOriginal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Label Content="{Binding StatusCreateDimStyle}"
                               Foreground="{Binding ColorTextOriginal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Label Content="New Multileader style was created successfully!"
                               Visibility="Collapsed" />
                        <Label Content="{Binding StatusCreateScaleVP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               Foreground="{Binding ColorTextOriginal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Extract Block">
            <Border Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Content="Extract AutoCAD Block"
                           FontSize="26"
                           FontWeight="Bold" />
                    <Label Grid.Row="1"
                           Content="Extract multiple block to separate files" />
                    <Separator Grid.Row="1"
                               Margin="0 35 0 0"
                               Background="LightGray" />
                    <Border Grid.Row="2"
                            Margin="0 15 0 0"
                            Style="{StaticResource ShadowBorderStyle}" />
                    <Border Grid.Row="2"
                            Background="White"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0 15 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.3*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     Width="200"
                                     HorizontalAlignment="Left"
                                     Text="{Binding BlockNameStartWith, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Grid.Row="0"
                                    Grid.Column="1"
                                    Content="Load"
                                    Width="100"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Command="{Binding CountBlockCommand}" />
                            <CheckBox Grid.Column="2"
                                      Content="Check all"
                                      VerticalAlignment="Center" 
                                      VerticalContentAlignment="Center"/>
                            <CheckBox Grid.Column="3"
                                      Content="UnCheck"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center" />
                            <ListBox Grid.Row="1"
                                     Grid.ColumnSpan="4"
                                     Margin="0 10 0 0"
                                     Height="200"
                                     ItemsSource="{Binding ListDetailItemTest}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected}"
                                                      Margin="5 0" VerticalContentAlignment="Center"/>
                                            <TextBlock Text="{Binding BlockNameTest}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                    
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                    </Border>
                    <Border Grid.Row="3"
                            Margin="0 15 0 0"
                            Style="{StaticResource ShadowBorderStyle}">
                    </Border>
                    <Border Grid.Row="3"
                            Margin="0 15 0 0"
                            Background="White"
                            CornerRadius="10"
                            Padding="15">
                        <Grid>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <ComboBox Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Label Content="{Binding TotalNumberOfBlock}"
                                       Foreground="Green" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Extract"
                                        Width="100"
                                        Height="40" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

            </Border>
        </TabItem>
    </TabControl>

</Window>
                    